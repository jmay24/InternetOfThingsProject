<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/topLayout"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="62dp"
            app:srcCompat="@drawable/applogo"
            android:id="@+id/imageView"
            android:layout_weight="1" />

        <TextView
            android:text="Smart Enviroment System"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:paddingLeft="20dp"
            android:textColorLink="@color/colorPrimary"
            android:padding="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleLayout"
        android:padding="10dp"
        android:background="@android:color/transparent">

        <TextView
            android:text="Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:padding="10dp"
            android:layout_weight="40"
            android:textSize="30sp"
            android:background="#ffffff"
            android:backgroundTint="@android:color/transparent" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="194dp"
                android:layout_height="113dp"
                android:id="@+id/tempButton"
                app:srcCompat="@drawable/temp"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/transparent" />

            <ImageButton
                android:layout_width="155dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/humi"
                android:id="@+id/humiButton"
                android:scaleType="centerInside"
                android:background="#ffffff"
                android:backgroundTint="@android:color/transparent" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:text="Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="30sp" />

            <TextView
                android:text="Humidity"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:id="@+id/textView5"
                android:autoText="false"
                android:gravity="right|center_vertical"
                android:height="20dp"
                android:textSize="30sp"
                android:layout_row="0"
                android:layout_column="3" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:foregroundGravity="right"
        android:layout_gravity="right">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomLayout"
        android:weightSum="1"
        android:backgroundTint="#DDDDDD"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="114dp">

            <ImageButton
                android:layout_width="192dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/settings_cog"
                android:id="@+id/settingsButton"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:paddingLeft="40dp"
                android:layout_weight="0.92"
                android:elevation="0dp"
                android:foregroundGravity="left"
                android:backgroundTint="#DDDDDD" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/vibration"
                android:id="@+id/vibrationButton"
                android:baselineAlignBottom="false"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerInside" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="30sp"
                android:gravity="left|center"
                android:layout_gravity="left"
                android:layout_weight="4"
                android:foregroundGravity="left|center"
                android:paddingLeft="40dp" />

            <TextView
                android:text="Vibration"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_weight="21.75"
                android:layout_gravity="right"
                android:paddingRight="30dp"
                android:paddingBottom="20dp" />
        </GridLayout>

    </LinearLayout>

</LinearLayout>